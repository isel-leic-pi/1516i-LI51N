<div class="col-md-12">
    <h1>{{title}}</h1>

    <div class="container">
        <div class="col-md-8">
            <div class="row row-content">
                <ul class="col-md-offset-3 nav nav-tabs" id="tasks-filter">
                    <li role="presentation" class="active"><a>All</a></li>
                    <li role="presentation"><a>Todo</a></li>
                    <li role="presentation"><a href="#">Progress</a></li>
                    <li role="presentation"><a href="#">Done</a></li>
                </ul>
            </div>
            <p>

            <div class="row row-content">

                <ul id="tasks">
                    {{#each tasks}}
                        {{> task }}
                    {{/each}}
                </ul>
            </div>
            </p>
        </div>
        <div class="col-xs-offset-1 col-md-3">

            <form method="POST" id="task-form" action="/tasks" class="form-horizontal">
                <fieldset>
                    <legend>New Task:</legend>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" id="description" name="description" class="form-control"
                               placeholder="Insert task description here" required>
                    </div>

                    <div class="form-group">
                        <label for="status">Initial Status:</label>
                        <select name="status" id="status" class="form-control">
                            <option value="PROGRESS">PROGRESS</option>
                            <option value="DONE">DONE</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="duedate">Due Date:</label>
                        <input type="date" id="duedate" name="duedate" class="form-control" da>
                    </div>

                </fieldset>
                <input type="submit" id="submit-task" value="Create new Task" class="btn btn-primary"/>
            </form>

        </div>

    </div>

</div>


<script src="/javascripts/tasks.js" type="text/javascript">
</script>



