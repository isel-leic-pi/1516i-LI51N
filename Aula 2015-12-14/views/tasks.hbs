<h1>{{title}}</h1>


<div class="container">
    <div class="row">
        <div class="col-md-8">
            <ul>
                {{#each tasks}}
                    <div class="panel {{statusPanelClass status}}">
                        <div class="panel-heading">

                            <h3 class="panel-title">
                                <span title="{{status}}" class="glyphicon {{statusIconClass status}}"/> {{description}}
                            </h3>
                        </div>

                    </div>
                {{/each}}

            </ul>
        </div>
        <div class="col-md-2">

            <form method="POST" action="/tasks" class="form-horizontal">
                <fieldset>
                    <legend>New Task:</legend>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" id="description" name="description" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="status">Initial Status:</label>
                        <select name="status" id="status" class="form-control">
                            <option value="1">TODO</option>
                            <option value="2">PROGRESS</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="duedate">Due Date:</label>
                        <input type="date" id="duedate" name="duedate" class="form-control" da>
                    </div>

                </fieldset>
                <input type="submit" value="Create new Task" class="btn btn-primary"/>
            </form>

        </div>
    </div>
</div>


